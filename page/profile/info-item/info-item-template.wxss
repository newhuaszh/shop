.info-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1px solid rgb(237, 237, 237);
  border-bottom-color: rgba(237, 237, 237, 1);
  height: 50px;
}

.info-img {
  width: 20px;
  height: 20px;
  vertical-align: middle;
  margin-left: 20px;
}

.info-title {
  font-size: 16px;
  margin-left: 20px;
}